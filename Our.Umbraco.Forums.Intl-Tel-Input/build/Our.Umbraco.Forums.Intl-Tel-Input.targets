<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoForumsIntlTelInputContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.Forums.Intl_Tel_Input\**\*.*</OurUmbracoForumsIntlTelInputContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoForumsIntlTelInputAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoForumsIntlTelInputContentFiles Include="$(OurUmbracoForumsIntlTelInputContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.Forums.Intl_Tel_Input files: $(OurUmbracoForumsIntlTelInputContentFilesPath) - #@(OurUmbracoForumsIntlTelInputContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(OurUmbracoForumsIntlTelInputContentFiles)"
            DestinationFiles="@(OurUmbracoForumsIntlTelInputContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Forums.Intl_Tel_Input\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearOurUmbracoForumsIntlTelInputAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoForumsIntlTelInputDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Forums.Intl_Tel_Input\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.Forums.Intl_Tel_Input data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoForumsIntlTelInputDir)"  />
    </Target>

</Project>
